{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "clippboard",
  "version": "0.1.0",
  "identifier": "com.clippboard.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "clippboard",
        "width": 400,
        "height": 440,
        "minWidth": 400,
        "minHeight": 440,
        "maxWidth": 400,
        "maxHeight": 440,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "deb",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
     "clipboard-manager": null
  }
}
